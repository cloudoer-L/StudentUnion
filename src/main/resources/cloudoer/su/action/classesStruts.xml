<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="classes" namespace="/classes" extends="struts-default">
        <action name="indexUI" class="classesAction" method="indexUI">
            <result name="success">/WEB-INF/views/basics/classes/index.jsp</result>
        </action>
        <action name="addUI" class="classesAction" method="addUI">
            <result name="success">/WEB-INF/views/basics/classes/add.jsp</result>
        </action>
        <action name="importUI" class="classesAction" method="importUI">
            <result name="success">/WEB-INF/views/basics/classes/import.jsp</result>
        </action>
        <action name="infoUI" class="classesAction" method="infoUI">
            <result name="success">/WEB-INF/views/basics/classes/info.jsp</result>
        </action>
        <action name="messageUI" class="classesAction" method="messageUI">
            <result name="success">/WEB-INF/views/basics/classes/message.jsp</result>
        </action>
        <action name="classes_studentsUI" class="classesAction" method="classes_studentsUI">
            <result name="success">/WEB-INF/views/basics/classes/classes_students.jsp</result>
        </action>
        <action name="classes_committeeUI" class="classesAction" method="classes_committeeUI">
            <result name="success">/WEB-INF/views/basics/classes/classes_committee.jsp</result>
        </action>

        <action name="getAll" class="classesAction" method="getAll"></action>
        <action name="getByPage" class="classesAction" method="getByPage"></action>
        <action name="getById" class="classesAction" method="getById"></action>
        <action name="getByNumber" class="classesAction" method="getByNumber"></action>
        <action name="add" class="classesAction" method="add"></action>
        <action name="update" class="classesAction" method="update"></action>
        <action name="delete" class="classesAction" method="delete"></action>
        <action name="importFile" class="classesAction" method="importFile"></action>
        <action name="exportFile" class="classesAction" method="exportFile"></action>
        <action name="getStudents" class="classesAction" method="getStudents"></action>
        <action name="getClassCommittee" class="classesAction" method="getClassCommittee"></action>
    </package>
</struts>